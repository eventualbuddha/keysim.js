    "esperanto": "^0.5.7",
    "gobble": "^0.7.1",
    "gobble-cli": "^0.4.2",
    "jsdom": "2.0.0",
    "karma": "^0.12.31",
    "karma-browserify": "^2.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-mocha": "^0.1.10",
    "karma-sauce-launcher": "^0.2.10",
    "mocha": "^2.1.0"
