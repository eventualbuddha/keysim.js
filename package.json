{
  "name": "keysim",
  "version": "1.3.0",
  "description": "Keyboard simulator for JavaScript.",
  "main": "lib/keysim.js",
  "jsnext:main": "lib/keysim.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eventualbuddha/keysim.js"
  },
  "scripts": {
    "build": "browserify . --standalone keysim > dist/keysim.js",
    "test": "npm run build && npm run test:node && npm run test:node:dist && npm run test:browser",
    "test:browser": "karma start --single-run",
    "test:node": "mocha --require babel-register -R spec --recursive test",
    "test:node:dist": "DIST=true mocha --require babel-register -R spec --recursive test"
  },
  "files": [
    "dist/keysim.js",
    "lib/keysim.js"
  ],
  "browserify": {
    "transform": [
      "babelify"
    ],
    "ignore": [
      "jsdom"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "keywords": [
    "keyboard",
    "event",
    "dom",
    "KeyboardEvent",
    "simulate"
  ],
  "author": "Brian Donovan",
  "license": "MIT",
  "devDependencies": {
    "add-event-handler": "^1.0.0",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "detect-node": "^2.0.3",
    "es5-shim": "^4.1.10",
    "jsdom": "3.1.2",
    "karma": "^0.13.15",
    "karma-browserify": "^4.3.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "karma-sauce-launcher": "^0.2.14",
    "mocha": "^2.2.5"
  }
}
